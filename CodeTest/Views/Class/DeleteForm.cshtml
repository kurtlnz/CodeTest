@model CodeTest.ViewModels.DeleteFormViewModel
@{
    ViewBag.Title = "Delete Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Class != null)
{
    <h2>Delete Class</h2>

    using (Html.BeginForm("DeleteClassConfirm", "Class"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Class.ClassName)
            @Html.TextBoxFor(m => m.Class.ClassName, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Class.Location)
            @Html.TextBoxFor(m => m.Class.Location, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Class.TeacherName)
            @Html.TextBoxFor(m => m.Class.TeacherName, new { @class = "form-control", @readonly = true })
        </div>
        @Html.HiddenFor(m => m.Class.ClassId)
        <strong>Deleting this class will also delete all associated students. Do you wish to continue?</strong>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Delete</button>
    }
}
