    <link rel="stylesheet" href="@Url.Content("~/Scripts/tablesorter/themes/blue/style.css")" />

}

    <div>
        <h1>CodeTest</h1>

        <h3>Classes</h3>
        <table id="ClassList" class="table table-bordered table-hover tablesorter">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Location</th>
                    <th>Teacher Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Classes)
            {
                <tr>
                    <td>@c.ClassName</td>
                    <td>@c.Location</td>
                    <td>@c.TeacherName</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
        }
            </tbody>
        </table>
        <h3>Biology</h3>
        <table id="StudentList" class="table table-bordered table-hover tablesorter">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Age</th>
                    <th>GPA</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>ClassName</td>
                    <td>Location</td>
                    <td>TeacherName</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
            </tbody>
        </table>
    </div>

@section scripts {
    <script type="text/javascript">

        $("#ClassList > tbody tr").click(function () {
            var selected = $(this).hasClass("bg-primary");
            $("#ClassList > tbody tr").removeClass("bg-primary");
            if (!selected)
                $(this).addClass("bg-primary");
        });

