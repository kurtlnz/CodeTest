@model CodeTest.ViewModels.DeleteFormViewModel
@{
    ViewBag.Title = "DeleteForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Class != null)
{
    <p>Deleting this class will also delete all associated students. Do you wish to continue?</p>

    using (Html.BeginForm("DeleteClassConfirm", "Home"))
    {
        @Html.HiddenFor(m => m.Class.ClassId)
        @Html.HiddenFor(m => m.Class.ClassName)
        @Html.HiddenFor(m => m.Class.Location)
        @Html.HiddenFor(m => m.Class.TeacherName)
        <button type="submit" class="btn btn-default">Delete</button>
    }
}

@if (Model.Student != null)
{
    <p>Delete this student?</p>

    using (Html.BeginForm("DeleteStudentConfirm", "Home"))
    {
        @Html.HiddenFor(m => m.Student.StudentId)
        @Html.HiddenFor(m => m.Student.GivenName)
        @Html.HiddenFor(m => m.Student.Surname)
        @Html.HiddenFor(m => m.Student.AgeInYears)
        @Html.HiddenFor(m => m.Student.GPA)
        <button type="submit" class="btn btn-default">Delete</button>
    }
}